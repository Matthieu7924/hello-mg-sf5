{% extends 'base.html.twig' %}

{% block title 'Projects | ' ~ parent() %}

{% block body %}

    <div class="flex">
        <div class="flex-1 max-w-sm rounded overflow-hidden shadow-lg m-4">
            <h2 class="text-gray-700 text-xl font-bold p-4">Velowash</h2>
            <a href="https://velowash-f37b8c65ebd2.herokuapp.com/">
                <img src="{{ asset('/images/velowash.jpg') }}" alt="Velowash" class="w-full h-64 project-image">
            </a>
            <div class="px-6 py-4">
                <p class="text-gray-700 text-base">
                    Velowash développé en PHP et JS.
                </p>
            </div>
        </div>
        

        <div class="flex-1 max-w-sm rounded overflow-hidden shadow-lg m-4">
