<header class="w-screen bg-black fixed top-0 left-0 right-0 mb-25">

    <div class="flex justify-between items-center py-4">
<h1 class="text-4xl font-bold text-indigo-500 ml-6">{{ app.request.server.get('APP_NAME') }}</h1>    {# <p class="text-4xl font-bold text-white">{{ app.request.server.get('APP_NAME') }}</p> #}

        <ul class="flex items-center">
            {% if app.request.attributes.get('_route') != 'app_home' %}
                <li>
                    <a href="{{ path('app_home') }}" class="text-indigo-500 hover:text-indigo-700 mx-5">Home</a>
                </li>
            {% endif %}
            {% if app.request.attributes.get('_route') != 'app_about' %}
                <li>
                    <a href="{{ path('app_about') }}" class="text-indigo-500 hover:text-indigo-700 mx-5">About me</a>
                </li>
            {% endif %}
            {% if app.request.attributes.get('_route') != 'app_studies' %}
                <li>
                    <a href="{{ path('app_studies') }}" class="text-indigo-500 hover:text-indigo-700 mx-5">Studies</a>
                </li>
            {% endif %}
            {% if app.request.attributes.get('_route') != 'app_projects' %}
                <li>
                    <a href="{{ path('app_projects') }}" class="text-indigo-500 hover:text-indigo-700 mx-5">Projects</a>
                </li>
            {% endif %}
            {% if app.request.attributes.get('_route') != 'app_music' %}
                <li>
                    <a href="{{ path('app_music') }}" class="text-indigo-500 hover:text-indigo-700 mx-5">Music</a>
                </li>
            {% endif %}
        </ul>
    </div>
</header>